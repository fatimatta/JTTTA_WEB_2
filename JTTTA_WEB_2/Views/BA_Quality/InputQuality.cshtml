@{
    ViewBag.Title = "Tuah Turangga Agung";
    ViewBag.dashboard = "Home";
    ViewBag.dashboardSmall = "Input Plan";
    Layout = "~/Views/Shared/_blankLayout.cshtml";
    ViewBag.pathParent = Url.Content("~").Substring(0, Url.Content("~").Length - 1);
}

<style>
    .k-list-scroller {
        height: 170px !important;
        overflow-y: scroll !important;
    }

    .k-dropdown, .k-datepicker {
        width: 9.4em;
    }

    .k-dropdown-wrap, .k-picker-wrap {
        border-radius: 3px;
        height: 36px;
    }

        .k-picker-wrap .k-input {
            height: 32px;
            width: 100%;
        }

    .k-dropdown .k-input {
        padding-top: 7px;
    }

    .k-picker-wrap .k-icon {
        margin-top: 7px;
    }

    .col-md-3 {
        padding-left: 0.5px;    
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        /* display: none; <- Crashes Chrome on hover */
        -webkit-appearance: none;
        margin: 0; /* <-- Apparently some margin are still there even though it's hidden */
    }
</style>

<input type="hidden" id="urlPath" name="urlPath" value="@ViewBag.pathParent" />

