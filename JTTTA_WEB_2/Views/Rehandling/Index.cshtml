@{
    /**/
    ViewBag.Title = "Tuah Turangga Agung";
    ViewBag.dashboard = "Home";
    ViewBag.dashboardSmall = "Dashboard Produksi";
    Layout = "~/Views/Shared/layout_admin.cshtml";
    ViewBag.pathParent = Url.Content("/").Substring(0, Url.Content("/").Length - 1);
}

<style>

    .k-list-scroller {
        overflow-y: scroll;
    }
</style>

<h2>Rehandling Activity</h2>

<input type="hidden" id="urlPath" name="urlPath" value="@ViewBag.pathParent" />


<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-flat">
            <div class="panel-body">

                <div class="col-md-12 col-lg-6">
                    <div class="col-md-12" id="div_tanggal">
                        <input id="txt_tanggal" title="Tanggal" />
                        <input id="txt_jam" title="jam" />
                        <input id="txt_menit" title="menit" />


                        <input class="form-check-input" type="checkbox" value="" id="check" checked onclick="cekAktif()" on>
                        <label class="form-check-label" for="flexCheckChecked">
                            active
                        </label>
                    </div>

                    <div class="col-md-6" id="div_unit">
                        <input id="txt_Unit" />
                    </div>
                    <div class="col-md-6" id="div_location">
                        <div class="col-md-12" id="dv_source"></div>
                        <div class="col-md-12" id="dv_destination"></div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-6">
                    <div id="grid"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="@ViewBag.pathParent/Js/Rehandling/index.js"></script>
<script type="text/javascript" src="@ViewBag.pathParent/Kendo/jszip.js"></script>
<script type="text/javascript" src="@ViewBag.pathParent/Kendo/jszip.min.js"></script>